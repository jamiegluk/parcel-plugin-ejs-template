{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "typeRoots": ["types"]
  },
  "include": ["*.js", "types/*"],
  "compileOnSave": true
}
